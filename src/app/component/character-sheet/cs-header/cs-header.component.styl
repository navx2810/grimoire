@require "~vars.styl"
.info
	div
		flex 1
		text-align center
	h2
		color secondary
		/* color #444 */
	sup
		color darken(secondary, 25)
	h3
		color primary
		font-size 1.25em

.level
	display flex
	align-items center
	p
		margin 0
		padding 0
		font-weight bold
	.bar
		position relative
		box-sizing content-box
		margin 0 1em
		flex 1 1 auto
		height 4px
		background #222
		.pos
			width 10%
			max-width 100%
			background hsl(154 80 50)
			height 100%
		h3
			position absolute
			width 100%
			font-size 1.5em
			color #fff
			/* text-shadow 0 0 5px primary, 0 0 5px #222 */
			text-shadow 0 0 5px primary, 0 0 5px primary, 0 0 5px primary, 0 0 5px primary, 0 0 5px primary, 0 0 5px primary
			text-align center
			top -350%

ul.nav
	margin 1.5em 0