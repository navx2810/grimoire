@require "~vars"

#scores
	box-sizing border-box
	.stat
		/* border-radius .25em */
		box-sizing border-box
		text-align center
		border 2px solid primary
	h2, h3, p
		padding 0 .25em
		margin 0
	h2
		color #fff
		background primary
		width 100%
	p
		border-top 2px solid primary
		font-size 1.2em
		font-weight 500
		color primary

#skills
	h3
		margin 0 0.5em 0.25em 0.5em
		padding-bottom 8px
		border-bottom 2px solid primary
	ul
		margin 0 0.5em
	li
		display flex
		justify-content space-between
		p
			flex 1
			font-size 1.1em
		p:first-child, p:last-child
			flex 0
			margin 0 1em
		p:first-child
			color primary
			font-weight bold
			margin-left 0
		p:last-child
			font-weight bold